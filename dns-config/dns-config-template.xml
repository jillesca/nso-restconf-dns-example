<config-template xmlns="http://tail-f.com/ns/config/1.0"
  servicepoint="dns-config">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{/device}</name>
      <config>
        <ip xmlns="urn:ios">
          <name-server>
            <?foreach {/server}?>
            <name-server-list>
              <address>{/server/address}</address>
            </name-server-list>
            <?end?>
          </name-server>
        </ip>
      </config>
    </device>
  </devices>
</config-template>